{
  "manifest_version": 2,

  "name": "Note Space",
  "description": "This extension acts as a simple notepad",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
	"default_title": "Leave a note to yourself!"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}